<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="2dp"
    android:background="@color/background_overlay"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/list_id_textview"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="@color/mainDark"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/mantinia"
        android:text="XVII"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/list_textview"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textColor="@color/list_text_color_overlay"
        android:textAlignment="textStart"
        android:textSize="23sp"
        android:maxLines="3"
        android:fontFamily="@font/mantinia"
        android:text="@string/site_long_title" />

    <ImageView
        android:id="@+id/list_imageview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:layout_gravity="end"
        android:src="@drawable/annigoni" />

</LinearLayout>

