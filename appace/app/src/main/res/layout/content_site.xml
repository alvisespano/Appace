<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clipChildren="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".component.SiteActivity"
    tools:showIn="@layout/activity_site">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:contentDescription="@string/imageview_default_contentdescription"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_black" />

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/site_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/text_margin"
            android:autoLink="all"
            android:fontFamily="@font/grotesk"
            android:gravity="center_horizontal|start"
            android:linksClickable="true"
            android:text="@string/site_long_text"
            android:textColor="@color/site_textColor"
            android:textColorHighlight="@color/textColorHighlight"
            android:textColorLink="@color/mainBright"
            />

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
