<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".component.SiteActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/site_title_app_bar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.8"
                    android:contentDescription="@string/imageview_default_contentdescription"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_black" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/site_imageview_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <!--<ImageView-->
                        <!--android:id="@+id/site_imageview"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:adjustViewBounds="true"-->
                        <!--android:alpha="0.95"-->
                        <!--android:contentDescription="@string/imageview_default_contentdescription"-->
                        <!--android:fitsSystemWindows="true"-->
                        <!--android:scaleType="fitCenter"-->
                        <!--android:src="@drawable/beolco" />-->

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/site_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:alpha="0.9"
                    android:gravity="bottom|end"
                    android:maxLines="4"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textIsSelectable="false"
                    android:textSize="40sp"
                    android:theme="@style/AppTheme"
                    tools:text="@string/site_long_title" />

            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <!--<ImageButton-->
    <!--android:id="@+id/gotomaps_site_button"-->
    <!--style="@android:style/Widget.Holo.Light.ImageButton"-->
    <!--android:layout_width="35dp"-->
    <!--android:layout_height="35dp"-->
    <!--android:layout_below="@+id/site_title_textview"-->
    <!--android:background="#00000000"-->
    <!--android:contentDescription="@string/imageview_default_contentdescription"-->
    <!--android:scaleType="fitCenter"-->
    <!--android:src="@drawable/button_car"-->
    <!--android:adjustViewBounds="true"-->
    <!--android:focusedByDefault="true"-->
    <!--app:layout_anchor="@+id/include"-->
    <!--app:layout_anchorGravity="right|top" />-->

    <include
        android:id="@+id/include"
        layout="@layout/content_site" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/gotomaps_site_button"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="5dp"
        app:backgroundTint="#00000000"
        app:borderWidth="0dp"
        app:elevation="5dp"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="right|bottom"
        app:pressedTranslationZ="5dp"
        app:rippleColor="@android:color/white"
        app:srcCompat="@drawable/button_car" />


</android.support.design.widget.CoordinatorLayout>